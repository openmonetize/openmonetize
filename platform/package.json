{
  "name": "@openmonetize/root",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:migrate": "pnpm --filter @openmonetize/common db:migrate:dev",
    "db:deploy": "pnpm --filter @openmonetize/common db:migrate:deploy",
    "db:generate": "pnpm --filter @openmonetize/common db:generate",
    "db:seed": "pnpm db:deploy && pnpm db:generate && dotenv -e .env -- tsx scripts/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start:all": "pnpm -r --parallel start",
    "start:ingestion": "node packages/ingestion-service/dist/index.js",
    "start:rating": "node packages/rating-engine/dist/index.js",
    "start:api": "node packages/api-gateway/dist/index.js",
    "license:check": "tsx scripts/apply-licenses.ts --check",
    "license:fix": "tsx scripts/apply-licenses.ts"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/node": "^24.10.1",
    "@types/uuid": "9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.12",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "glob": "^13.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.2.5",
    "tsx": "^4.20.6",
    "turbo": "^1.12.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  }
}