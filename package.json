{
  "name": "openmonetize-root",
  "private": true,
  "description": "Root of OpenMonetize repository",
  "scripts": {
    "postinstall": "cd platform && pnpm install",
    "build": "cd platform && pnpm build",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "platform/**/*.{ts,tsx,py}": [
      "pnpm -C platform license:check"
    ],
    "platform/apps/dashboard/**/*.{ts,tsx}": [
      "pnpm -C platform --filter dashboard exec eslint --config eslint.config.mjs --fix",
      "prettier --write",
      "tsc-files --noEmit -p platform/apps/dashboard/tsconfig.json"
    ],
    "platform/packages/**/*.{ts,tsx}": [
      "prettier --write",
      "tsc-files --noEmit -p platform/tsconfig.json"
    ],
    "scripts/**/*.{ts,tsx}": [
      "prettier --write",
      "tsc-files --noEmit -p platform/tsconfig.json"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4"
  }
}
