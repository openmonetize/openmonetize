# OpenMonetize Platform Environment Variables

# Database
DATABASE_URL="postgresql://admin:dev_password_change_in_production@localhost:5432/monetization?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monetization
DB_USER=admin
DB_PASSWORD=dev_password_change_in_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_LOG_LEVEL=info

# API Documentation (Swagger/OpenAPI)
SWAGGER_ENABLED=true  # Set to 'false' to disable Swagger completely
SWAGGER_REQUIRE_AUTH=false  # Set to 'true' to require authentication (auto-enabled in production)
PUBLIC_URL=  # Your public API URL (e.g., https://api.example.com) - auto-detected on Railway
RAILWAY_PUBLIC_DOMAIN=  # Automatically set by Railway - do not set manually

# Ingestion Service
INGESTION_SERVICE_PORT=8081
INGESTION_SERVICE_HOST=0.0.0.0
INGESTION_SERVICE_LOG_LEVEL=info

# Security
JWT_SECRET=your_secret_key_change_in_production_min_32_chars
API_KEY_PREFIX=om_
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# LLM Provider API Keys (for cost tracking)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_AI_API_KEY=your-google-ai-key

# Auth (Google OAuth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXTAUTH_SECRET=your_nextauth_secret_change_in_production

# Super Admin
# Comma-separated list of emails that have super admin access to view all SDK users
SUPER_ADMIN_EMAILS=admin@example.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Feature Flags
ENABLE_COST_OPTIMIZATION=true
ENABLE_PROVIDER_FALLBACK=false
ENABLE_CACHING=true
